@section css{
    <link rel="stylesheet" href="~/Content/select.css" />
}

<h2 style="text-align:center">SDP</h2>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Supplier Name</th>
                <th>Project Name</th>
                <th>Detail Name</th>
                <th>Quantity</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="data"></tbody>
    </table>
</div>
<div>
    <input type="button" id="getAllBtn" value="Get All" class="btn" />
</div>

<h3 style="margin-left:125px;">Add SDP</h3>
<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2">Supplier:</label>
        <div class="col-sm-10">
            <div class="select-style">
                <select id="selectSupplier"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Project:</label>
        <div class="col-sm-10">
            <div class="select-style">
                <select id="selectProject"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Detail:</label>
        <div class="col-sm-10">
            <div class="select-style">
                <select id="selectDetail"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Quantity:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="selectQuantity">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" id="addBtn">Add</button>
        </div>
    </div>
</form>


@section scripts{
    <script src="~/Scripts/MyScripts/SDPScript.js"></script>
}


